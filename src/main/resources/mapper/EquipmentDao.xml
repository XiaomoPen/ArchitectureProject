<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seven.springboot.mapper.ly.EquipmentDao">
    <resultMap id="equipmentMap" type="com.seven.springboot.pojo.TPjEquipment">
    </resultMap>

    <select id="findEquipmentAll" resultType="TPjEquipment" parameterType="com.seven.springboot.vo.ly.ParamsVo">
        select *
        from t_pj_equipment
        <where>
            equipment_name is not null
            <if test="paramsVo.equipmentName != null and paramsVo.equipmentName != ''">
                and equipment_name like concat('%', #{paramsVo.equipmentName}, '%')
            </if>
        </where>
    </select>

    <insert id="addEquipment" parameterType="TPjEquipment">

    </insert>
</mapper>